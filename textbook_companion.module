{
  $root_path = textbook_companion_path();
  $dir_path = $root_path . "latex/";
  $pdf_filename = "book_" . $book_id . ".pdf";
  if (file_exists($dir_path . $pdf_filename))
    unlink($dir_path . $pdf_filename);
}
